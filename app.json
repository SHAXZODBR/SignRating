{
  "expo": {
    "name": "Rating",
    "slug": "Rating",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "rating",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rating.app",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to scan QR codes",
        "NSLocationWhenInUseUsageDescription": "We need location to detect nearby connections"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.rating.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Rating to access your camera for QR scanning"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Rating to detect nearby connections"
        }
      ]
    ]
  }
}